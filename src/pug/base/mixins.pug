        img(src= src, alt= content)

mixin testominial_content_item(src, content, name, position)
    .testimonial_content_item
        .item_left
            img(src=src, alt="testimonial avatar").item_avatar.img-fluid
        .item_right
            p.item_right_content= content
            .item_right_regency 
