mixin category_item(title, title_id, collapse, heading, list, category_id)
    .accordion-item.category__content__list__item(id= category_id)
        h3(id= title_id).accordion-header
            button.accordion-button.collapsed( data-bs-toggle='collapse' data-bs-target="#"+collapse aria-controls= collapse)= title
        .accordion-collapse.collapse(id= collapse aria-labelledby= heading data-bs-parent='#accordionExample')
            .accordion-body
                nav
                    ul
                        each item in list
                            li= item

