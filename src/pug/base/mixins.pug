mixin formGroup(label, type, name, idInput, idError, placeholder)
    .form-group
        label= label 
        input(type= type, name= name, id= idInput placeholder= placeholder checked)
        i.fas.fa-check-circle
        i.fas.fa-exclamation-circle
        .error-message(id=idError)

